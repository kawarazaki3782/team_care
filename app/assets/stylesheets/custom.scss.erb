}

.header {
	background: $color-main;
	height: 100px;
	position: fixed;
	width: 100%;
	box-shadow: 0 3px 3px (rgba#000 0.16);
	z-index: 100;
	top: 0;
	left: 0;

	@include mq('sp') {
		height: 60px;
	}
}

.header＿inner {
	display: flex;
	align-items: center;
	height: inherit;
}

.header＿logo {
  
	width: 205px;
	
	img {
		display: block;
    

		@include mq('sp') {
			width: 182px;
		}
	}
}

.header＿nav {
	display: flex;
	margin-left: auto;
	align-items: center;

	@include mq('sp') {
		display: none;
	}

	li {
		&:not(:first-child) {
	   margin-left: 40px;
	  }

	   a {
		text-decoration: none;
		color: #fff;
		position: relative;
    display: inline-block;

			&:hover {
      -webkit-animation: zoom .3s;
      animation: zoom .3s;

      @-webkit-keyframes zoom {
      50% {
      -webkit-transform: scale(1.05);
      
      @keyframes zoom {
      50% {
      transform: scale(1.05);
      }
     }
    }
   }
  }
 }
}
