}

.header {
	background: $color-main;
	height: 100px;
	position: fixed;
	width: 100%;
	box-shadow: 0 3px 3px (rgba#000 0.16);
	z-index: 100;
	top: 0;
	left: 0;

	@include mq('sp') {
		height: 60px;
	}
}

.header＿inner {
	display: flex;
	align-items: center;
	height: inherit;
}

.header＿logo {
  
	width: 205px;
	
	img {
		display: block;
    

		@include mq('sp') {
			width: 182px;
		}
	}
}

.header＿nav {
	display: flex;
	margin-left: auto;
	align-items: center;

	@include mq('sp') {
		display: none;
	}

	li {
		&:not(:first-child) {
	   margin-left: 40px;
	  }

	   a {
		text-decoration: none;
		color: #fff;
		position: relative;
    display: inline-block;

			&:hover {
      -webkit-animation: zoom .3s;
      animation: zoom .3s;

      @-webkit-keyframes zoom {
      50% {
      -webkit-transform: scale(1.05);
      
      @keyframes zoom {
      50% {
      transform: scale(1.05);
      }
     }
    }
   }
  }
 }
}
}
//////////////////////mainvisua///////////////////////////

.main {
  background: image-url('main.jpeg') no-repeat center center / cover;
	width: 100%;
	height: 600px;
	position: relative;
  margin-bottom: 50px;
  border-radius: 20px;
}

.main::before {
  content: '';
  /* ↓暗いオーバーレイを半透明で配置 */
  background-color: rgba(0, 0, 0, 0.4);
  /* ↓全体を覆うように配置 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 20px;
}


.main_visual {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	text-align: center;
  color: #fff;
}

.main_visual_title {
	font-size: 64px;
	font-weight: 600;
	line-height: 1.3;
} 


.main_visual_lead {
	font-size: 40px;
	font-weight: 600;
	margin-top: 24px;
}

.main_visual_btn {
	margin-top: 40px;
	
   
	a {
		display: inline-block;
		width: 384px;
		max-width: 100%;
		line-height: 72px;
		height: 72px;
		text-align: center;
		text-decoration: none;
		background: $color-main2;
		color: #fff;
		font-size: 24px;
		font-weight: 700;
		border-radius: 8px;
		cursor: pointer;
	    outline: none;
	    padding: 0rem 2rem;
	    box-shadow: 2px 2px 4px gray;
	    border: 1px solid #ccc;
  }
}

.main_visual_btn a:active {
	transition: 0.1s;
	transform: translate3d(0,6px,0);
	box-shadow: none;
}



