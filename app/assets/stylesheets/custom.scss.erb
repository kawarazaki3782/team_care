}
.footer__copy {
	text-align: center;
	color: #fff;
	font-size: 14px;

	@include mq('sp') {
		margin-top: 40px;
	}

	a {
		text-decoration: none;
		color: #fff;
	}
}

.totop {
	position: fixed;
	right: 24px;
	bottom: 24px;
	z-index: 100;
	visibility: visible;
	transition: all 0.3s ease 0s;

	@include mq('tab') {
		right: 16px;
		bottom: 16px;
	}

	@include mq('sp') {
		right: 10px;
		bottom: 10px;
	}

	&.is-show {
		visibility: visible;
	}

	a {
		text-decoration: none;
		transition: all 0.3s ease 0s;
	}

	img {
		width: 60px;
		vertical-align: bottom;

		@include mq('sp') {
			width: 42px;
		}
	}
}

@mixin box_sizing {
    -moz-box-sizing:    border-box;
    -webkit-box-sizing: border-box;
    box-sizing:         border-box;
}

