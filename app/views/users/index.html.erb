<% provide(:title, 'ユーザー一覧') %>
<section class="users_section">
  <div class="users__inner inner">
    <h2 class="section-title_users">利用者一覧</h2>
      <ul class="users_ul">
        <% @users.each do |user| %>
          <li class="users_list">
            <%= link_to image_tag(user.profile_image.thumb100.url, class:'icon_mini'),"/users/#{user.id}", class:"users_list_item" %>
            <%= link_to(user.name, "/users/#{user.id}", class:'users_name' ) %> 
             <% if current_user.admin? && !current_user?(user) %>
    |         <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "ユーザーを削除しますか?" } %>
             <% end %>
          </li>
        <% end %>
      </ul>
   </div>
 </section>
 <%= paginate @users %>