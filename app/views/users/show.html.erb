<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">  
    </section>
    <% if @user.profile_image? %>                                                              
    <%= image_tag @user.profile_image.url %> 
    <% end %>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside> 
  <div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>                                                 

</div>
</div>

