<% provide(:title, '') %>
<% if @users.exists? %>
<section class="users_section">
  <div class="users__inner inner">
    <h2 class="section-title_users">フォロワー</h2>
      <ul class="users_ul">
        <% @users.each do |user| %>
          <li class="users_list">
            <%= link_to image_tag(user.profile_image.thumb100.url, class:'icon_mini'),"/users/#{user.id}" %>
            <%= user.name %>
         </li>
       <% end %>
     </ul>
   <%= paginate @users %>
   </div>
 </section>
<% else %>
<section class="users_section">
	 <div class="users__inner inner">
     <h2 class="section-title_users">フォロワー</h2>
     <p>フォロワーはいません</p>
   </div>
</section>
<% end %>