<section id="" class="contact section">
		<div class="contact__inner inner">
			<h2 class="section-title">Contact</h2><!-- /.section-title -->
			<div class="contact__item">
				<form action="#">
					<dl class="contact__controls">
						<div class="contact__control">
							<dt>
								<label class="contact__label contact__label--required" for="your-name">お名前</label>
							</dt>
							<dd>
								<input id="your-name" class="form-input" type="text" name="your-name" value="" placeholder="山田 太郎" required>
							</dd>
						</div><!-- /.contact__control -->
						<div class="contact__control">
							<dt>
								<label class="contact__label contact__label--required" for="your-mail">メールアドレス</label>
							</dt>
							<dd>
								<input id="your-mail" class="form-input" type="email" name="your-mail" value="" placeholder="text@example.com" required>
							</dd>
						</div><!-- /.contact__control -->
						<div class="contact__control">
							<dt>
								<label class="contact__label" for="your-message">お問い合わせ内容</label>
							</dt>
							<dd>
								<textarea id="your-message" class="form-textarea" name="your-message" placeholder="お問い合わせを入力してください"></textarea>
							</dd>
						</div><!-- /.contact__control -->
					</dl><!-- /.contact__controls -->
					</div><!-- /.contact__check -->
					<div class="contact__submit"><input class="button-arrow-right" type="submit" value="送信する"></div><!-- /.contact__submit -->
				</form>
			</div><!-- /.contact__item -->

		</div><!-- /.contact__inner -->
	</section><!-- /.contact -->