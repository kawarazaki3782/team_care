<h1>つぶやき詳細ページ</h1>
<h3><%= @micropost.user.name %></h3>
<h3><%= @micropost.content %></h3>
  <%= image_tag @micropost.post_image.url if @micropost.post_image? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
</span>
<h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <a href="/users/<%= @micropost.user.id %>"><%= c.user.name %></a>
    <%= c.content %>
    <hr>
  </div>
<% end %>

<%= form_for [@micropost, @comment] do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :micropost_id, value: @micropost.id %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>
<%= link_to "ホームへ戻る", microposts_path %>