<h2 class="section-title_post">検索結果: <%= @microposts.count %> 件</h2>
      <div class="timeline_area">
                <% @microposts.each do |micropost| %>
                <div class="timeline_posts">     
                    <div class="timeline_image_name">
                      <p class="post_image"><%= link_to image_tag(micropost.user.profile_image.url, class:'icon2 user_image'), "/users/#{micropost.user.id}" %></p>
                      <p class="post_name"><%= micropost.user.name %></p>
                      <p class="post_time"><%= micropost.created_at.strftime('%m月%d日%H:%M')%><br>
                    </div>
                  <div class="timeline_search_show">
                    <p class="post-text"><a href="/microposts/<%= micropost.id %>"><%= micropost.content %></a></p>
                   <% end %>   
                </div>  
      </div>
   </div>
</section>
<%= paginate @microposts %>
