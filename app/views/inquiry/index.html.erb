<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
<section class="contact section">
  <div class="contact__inner inner">
    <h2 class="section-title">お問い合わせ</h2>
      <% if @inquiry.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @inquiry.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
	  <div class="contact__item">
	     <dl class="contact__controls">
		   <div class="contact__control">
		     <dt>
			   <label class="contact__label contact__label--required" for="your-name">お名前</label>
			 </dt>
			 <dd>
               <%= f.text_field :name, class:"form-input", placeholder:"山田 太郎" %>
			 </dd>
		   </div>
		   <div class="contact__control">
		     <dt>
			   <label class="contact__label contact__label--required" for="your-mail">メールアドレス</label>
			 </dt>
			 <dd>
			   <%= f.text_field :email, class:"form-input", placeholder:"text@example.com"%>
			 </dd>
		   </div>
		   <div class="contact__control">
		     <dt>
			   <label class="contact__label" for="your-message">お問い合わせ内容</label>
			 </dt>
			 <dd>
			   <%= f.text_area :message, class:"form-textarea", placeholder:"お問い合わせを入力してください"%>
			 </dd>
		   </div>
		 </dl>
	  </div>
	  <div class="contact__submit">
	    <%= f.submit '送信する', class: 'button-arrow-right' %>
	  </div>
  </div>
</section>
<% end %>